<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".MainActivity">


<LinearLayout
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:radius="20dp"
        android:minWidth="260dp">


    <Button
        android:id="@+id/pantalla1"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="322dp"
        android:text="Biografía"
        android:textColor="@color/blueclaro"
        android:textStyle="normal"
        app:icon="@drawable/persona">


    </Button>

    <Button
        android:id="@+id/pantalla2"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:text="Hobbies"
        android:textColor="@color/blueclaro"
        android:textStyle="normal"
        app:icon="@drawable/hobbie">

    </Button>
</LinearLayout>

    <TextView
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="450dp"
        android:text="Maria Isabel Ricardo"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/Gris"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TextView>

    <TextView
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="450dp"
        android:text="Ingeniería Multimedia"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/blueclaro"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TextView>

    <TextView
    android:layout_marginLeft="190dp"
    android:layout_marginRight="150dp"
    android:layout_marginTop="290dp"
    android:layout_marginBottom="420dp"
    android:text="Cartagena"
    android:textSize="10dp"
    android:textStyle="normal"
    android:textColor="@color/blueclaro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</TextView>
    <ImageView
        android:layout_marginLeft="150dp"
        android:layout_marginRight="205dp"
        android:layout_marginTop="290dp"
        android:layout_marginBottom="430dp"
        android:src="@drawable/mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>



    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@id/text"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="160dp"
        android:text="Soy Maria Isabel, Tengo 19 años, Actualmente soy estudiante de ingenieria multimedia en la universidad San Buenaventura Seccional Cartagena. Mi color Favorito es el Azul claro o celeste.
Como hobbies tengo muchos pero he seleccionado los que mas realizo. "
        android:textSize="13dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textStyle="normal"
        android:letterSpacing="0.1"
        android:lineSpacingMultiplier="1.7"
        android:textColor="@color/blueclaro">

    </me.biubiubiu.justifytext.library.JustifyTextView>



    <ImageView
        android:layout_marginLeft="130dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="530dp"
        android:src="@drawable/sombra"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="530dp"
            android:src="@drawable/avatarmari">
        </ImageView>

    <ImageView
        android:layout_marginLeft="80dp"
        android:layout_marginTop="650dp"
        android:layout_marginRight="280dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/instagram"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>
    <ImageView
        android:layout_marginLeft="180dp"
        android:layout_marginTop="650dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/facebook2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ImageView>
    <ImageView
        android:layout_marginLeft="290dp"
        android:layout_marginTop="650dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/twitter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>